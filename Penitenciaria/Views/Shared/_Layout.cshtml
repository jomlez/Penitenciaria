<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Penitenciaria</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Home/Index">🚔 Penitenciaría</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1" id="menuNav" style="display:none;">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Home/Celdas">Celdas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="/Home/Reos">Reos</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item" id="linkLogin">
                            <a class="nav-link text-white" href="/Home/Login">Iniciar Sesión</a>
                        </li>
                        <li class="nav-item" id="linkLogout" style="display:none;">
                            <button class="btn btn-link nav-link text-white" onclick="cerrarSesion()">Salir</button>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const tokenGlobal = localStorage.getItem("tokenPenitenciaria");
        if (tokenGlobal) {
            document.getElementById("menuNav").style.display = "flex";
            document.getElementById("linkLogout").style.display = "block";
            document.getElementById("linkLogin").style.display = "none";
        }

        function cerrarSesion() {
            localStorage.removeItem("tokenPenitenciaria");
            localStorage.removeItem("usuario");
            localStorage.removeItem("rol");
            window.location.href = "/Home/Login";
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>