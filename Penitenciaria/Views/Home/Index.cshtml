@{
    ViewData["Title"] = "Panel Principal";
}

<div class="text-center mt-5">
    <h1 class="display-4 mb-4">Sistema Penitenciario</h1>
    <p class="lead text-muted">Bienvenido al panel de control administrativo.</p>
    <hr class="my-4">

    <div class="row justify-content-center mt-5">
        <div class="col-md-4 mb-3">
            <div class="card shadow h-100 hover-effect">
                <div class="card-body">
                    <h2 class="display-5"><i class="bi bi-grid-3x3"></i></h2>
                    <h5 class="card-title">Gestión de Celdas</h5>
                    <p class="card-text">Administrar pabellones, cupos y disponibilidad.</p>
                    <a href="/Home/Celdas" class="btn btn-primary w-100">Ir a Celdas</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card shadow h-100 hover-effect">
                <div class="card-body">
                    <h2 class="display-5"><i class="bi bi-people-fill"></i></h2>
                    <h5 class="card-title">Registro de Reos</h5>
                    <p class="card-text">Ingreso de nuevos reclusos, sentencias y crímenes.</p>
                    <a href="/Home/Reos" class="btn btn-danger w-100">Ir a Reos</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        const token = localStorage.getItem("tokenPenitenciaria");
        if (!token) {
            window.location.href = "/Home/Login";
        }
    });
</script>

<style>
    .hover-effect:hover {
        transform: translateY(-5px);
        transition: transform 0.3s;
        border-color: #0d6efd;
    }
</style>